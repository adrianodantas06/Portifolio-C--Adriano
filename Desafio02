using System;


namespace Desafio02
{
    class Program
    {
        public static void Main()
        {

            float codigo1 = 4.00f;
            float codigo2 = 4.50f;
            float codigo3 = 5.00f;
            float codigo4 = 2.00f;
            float codigo5 = 1.50f;


            Console.WriteLine("Digite o código: ");
            int codigo = int.Parse(Console.ReadLine());

            Console.WriteLine("Digite a quantidade de produto");
            int quantidade = int.Parse(Console.ReadLine());

            if (codigo == 1)
            {
                Console.WriteLine("O total a pagar é de R$ " + codigo1 * quantidade);
            }
            else if (codigo == 2)
            {
                Console.WriteLine("O total a pagar é de R$ " + codigo2 * quantidade);
            }
            else if (codigo == 3)
            {
                Console.WriteLine("O total a pagar é de R$ " + codigo3 * quantidade);
            }
            else if (codigo == 4)
            {
                Console.WriteLine("O total a pagar é de R$ " + codigo4 * quantidade);
            }
            else if (codigo == 5)
            {
                Console.WriteLine("O total a pagar é de R$ " + codigo5 * quantidade);
            }
        }
    }
}
